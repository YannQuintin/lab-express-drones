<h2>Create a new drone</h2>
<form action="/drones/create" method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">Model Name</label>
    <input type="text" name="name" class="form-control" placeholder="enter drone model">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Propellers</label>
    <input name="propellers" type="number" class="form-control" placeholder="eg.: 4">
  </div>
  </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Speed in m/sec</label>
    <input name="maxSpeed" type="number" class="form-control" placeholder="enter speed">
  </div>
  <a href="/drones"><button type="submit" class="btn btn-dark">Create Drone</button></a>
</form>



